<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>SB Admin 1 - Blog</title>

    <!-- Custom fonts for this template -->
    <link href="/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link
        href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
        rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="/css/sb-admin-2.min.css" rel="stylesheet">

    <!-- Custom styles for this page -->
    <link href="/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">

</head>

<body id="page-top">

    <!-- Sidebar -->
    <%- include ("./Layout/sidebar") %>
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                <%- include("./Layout/navbar")%>
                    <!-- End of Topbar -->

                    <!-- Begin Page Content -->
                    <div class="container-fluid">

                        <!-- Page Heading -->
                        <h1 class="h3 mb-2 text-gray-800">BLOG</h1>
                        <a href="/addblog" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm"><i
                                class="fas fa-download fa-sm text-white-50"></i> Add More Blog</a>
                        <hr>

                        <!-- DataTales Example -->
                        <div class="card shadow mb-4">
                            <div class="card-header py-3">
                                <h6 class="m-0 font-weight-bold text-primary">Artical</h6>
                            </div>
                            <div class="container">
                                <div class="row">
                                    <div class="col-12">
                                        <table class="table table-image">
                                            <thead>
                                                <tr>
                                                    <th scope="col">S.No</th>
                                                    <th scope="col">Image</th>
                                                    <th scope="col">Article Name</th>
                                                    <th scope="col">Author</th>
                                                    <th scope="col">Publish Date</th>
                                                    <th scope="col">Action</th>
                                                    <th scope="col">Action</th>
                                                </tr>
                                            </thead>
                                            <% if (viewdata.length>0){%>
                                            <tbody>
                                                <% let i=1 ; for(let data of viewdata){%>
                                                <tr>
                                                    <td><%=i++ %></td>
                                                    <td class="w-25">
                                                        <img src="/upload/<%=data.image%>" class="img-thumbnail" alt="Cinque Terre">
                                                        
                                                    </td>
                                                    <td><%=data.article%></td>
                                                    <td><%=data.author%></td>
                                                    <td><%=data.date%></td>
                                                    <td><a href="/editblog/<%=data.id%>">Edit</a></td>
                                                    <td><a href="/delblog/<%=data.id%>">Delete</a></td>
                                                    
                                                </tr>
                                            </tbody>
                                            <%}}else{%>
                                                <h3>No Blog</h3>
                                                <%}%>
                                        </table>
                                    </div>
                                </div>
                            </div>
                            <!-- /.container-fluid -->

                        </div>
                        <!-- End of Main Content -->

                        <!-- Logout Modal-->
                        <%- include("./Layout/logout")%>

                            <!-- Footer -->
                            <%- include("./Layout/footer")%>
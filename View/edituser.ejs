<body id="page-top">

    <!-- Sidebar -->
    <%- include ("./Layout/sidebar") %>
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                <%- include("./Layout/navbar")%>
                    <!-- End of Topbar -->
                    <div class="col-md-6 offset-md-3 mt-5">
                        </a>
                        <br>
                        <h1>Add User</h1>
                        <select class="form-group mt-3" aria-label="Default select example">
                                <option value="1">Admin</option>
                                <option value="2">User</option>
                            </select>
                        <form accept-charset="UTF-8" action="/adduser" method="post" enctype="multipart/form-data">
                            <input type="text" name="uid" value="<%=view._id%>">
                            <div class="form-group">
                                <label for="exampleInputName">Name</label>
                                <input type="text" name="article" class="form-control" id="exampleInputName"
                                    placeholder="Enter your name and surname" required="required" value="<%=view.name%>">
                            </div>
                            <div class="form-group">
                                <label for="text" required="required">Email</label>
                                <input type="email" name="email" class="form-control" id="exampleInputEmail1" value="<%=view.email%>"
                                    aria-describedby="emailHelp" placeholder="Your Email">
                            </div>
                            <div class="form-group">
                                <label for="text" required="required">Title</label>
                                <input type="text" name="author" class="form-control" id="exampleInputEmail1"
                                    aria-describedby="emailHelp" placeholder="Your Name" value="<%=view.position%>">
                            </div>
                            <div class="form-group">
                                <label for="text" required="required">Position</label>
                                <input type="text" name="date" class="form-control" id="exampleInputEmail1"
                                    aria-describedby="emailHelp" placeholder="User/admin" value="<%=view.role%>">
                            </div>
                            <hr>
                            <div class="form-group mt-3">
                                <label class="mr-2">Upload your Image:</label>
                                <input type="file" id="id" name="image" value="<%=view.image%>">
                            </div>
                            <hr>
                            <button type="submit" class="btn btn-primary">Update</button>
                        </form>
                    </div>



                    <!-- End of Main Content -->

                    <!-- Logout Modal-->
                    <%- include("./Layout/logout")%>

                        <!-- Footer -->
                        <%- include("./Layout/footer")%>